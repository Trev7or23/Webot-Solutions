---
import { Icon } from "astro-icon/components";
import Logo from "../header/Logo.astro";

interface Props {
    title: string;
    logo: string;
}

const { title, logo } = Astro.props;
---

<article
    class="flex flex-col gap-2 bg-gray-900 w-3xs h-72 rounded-3xl p-4 justify-between"
>
    <Logo />
    <div class="flex flex-col justify-start gap-3 h-36">
        <h3 class="mt-3 text-xl font-bold text-gray-900 dark:text-white">
            {title}
        </h3>
        <p
            class="text-base mb-3 text-pretty text-gray-700 sm:text-lg/relaxed dark:text-gray-400"
        >
            <slot />
        </p>
    </div>
    <Icon name="mdi:home" class={"size-8"} />
</article>
